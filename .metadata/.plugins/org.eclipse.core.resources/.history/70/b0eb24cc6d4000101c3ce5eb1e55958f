package com.jotsamikael.applycam.campus;

import java.time.LocalDate;

import com.jotsamikael.applycam.trainingCenter.UpdateTrainingCenterRequest;

import jakarta.validation.constraints.NotBlank;
import jakarta.validation.constraints.NotNull;
import lombok.Builder;
import lombok.Getter;
import lombok.Setter;


@Getter
@Setter
@Builder
public class UpdateCampusRequest {
	
	@NotBlank(message = "Name is required")
    @NotNull(message = "Name is required")
    private String name;

	@NotNull(message = "Capacity is required")
    @NotBlank(message = "Capacity is required")
    private int capacity;

    @NotNull(message = "Quarter is required")
    @NotBlank(message = "Quarter is required")
    private String quarter;

    @NotNull(message = "Town is required")
    @NotBlank(message = "Town is required")
    private String town;

    @NotNull(message = "X coordinate is required")
    @NotBlank(message = "X coordinate is required")
    private String xCoor;;

    @NotNull(message = "Y coordinate is required")
    @NotBlank(message = "Y coordinate is required")
    private String yCoor;

}
